# ============================================================================
# Realtor's Practice Frontend - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control!

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
# Backend API base URL
# Development: http://localhost:5000
# Production: Your deployed backend URL (Render, etc.)
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api

# Alternative API URL for client-side only requests
NEXT_PUBLIC_API_URL=http://localhost:5000

# ----------------------------------------------------------------------------
# Firebase Configuration (Client-side) - FOR AUTHENTICATION
# ----------------------------------------------------------------------------
# Get these values from Firebase Console > Project Settings > Your apps > Web app
# Go to: https://console.firebase.google.com/project/realtor-s-practice/settings/general
# These are public Firebase config values - safe to expose (they identify your app)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=realtor-s-practice.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=realtor-s-practice
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=realtor-s-practice.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id-here
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id-here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id-here

# ----------------------------------------------------------------------------
# Authentication
# ----------------------------------------------------------------------------
# JWT Secret (server-side only - no NEXT_PUBLIC prefix)
JWT_SECRET=your-jwt-secret-change-in-production

# Session timeout (milliseconds)
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Enable authentication (true/false)
NEXT_PUBLIC_AUTH_ENABLED=true

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable/disable features
NEXT_PUBLIC_FEATURE_SAVED_SEARCHES=true
NEXT_PUBLIC_FEATURE_EMAIL_ALERTS=true
NEXT_PUBLIC_FEATURE_NATURAL_LANGUAGE_SEARCH=true
NEXT_PUBLIC_FEATURE_EXPORT_CSV=true
NEXT_PUBLIC_FEATURE_EXPORT_XLSX=true
NEXT_PUBLIC_FEATURE_EXPORT_JSON=true

# ----------------------------------------------------------------------------
# Google Maps (for property location display)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ----------------------------------------------------------------------------
# Analytics & Monitoring
# ----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-url
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ----------------------------------------------------------------------------
# Deployment Configuration
# ----------------------------------------------------------------------------
# Base URL for the frontend application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Vercel-specific environment variables (set automatically by Vercel)
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
# VERCEL_ENV=production

# ----------------------------------------------------------------------------
# API Rate Limiting
# ----------------------------------------------------------------------------
# Client-side rate limit thresholds
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60000

# ----------------------------------------------------------------------------
# UI Configuration
# ----------------------------------------------------------------------------
# Default items per page
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20

# Maximum items per page
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Enable dark mode
NEXT_PUBLIC_DARK_MODE_ENABLED=true

# ----------------------------------------------------------------------------
# Email Configuration (for contact forms, etc.)
# ----------------------------------------------------------------------------
# Contact email
NEXT_PUBLIC_CONTACT_EMAIL=contact@realtorspractice.com

# Support email
NEXT_PUBLIC_SUPPORT_EMAIL=support@realtorspractice.com

# ----------------------------------------------------------------------------
# Performance & Optimization
# ----------------------------------------------------------------------------
# Enable image optimization
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Enable lazy loading
NEXT_PUBLIC_LAZY_LOADING=true

# API request timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ----------------------------------------------------------------------------
# Debug & Development
# ----------------------------------------------------------------------------
# Enable debug mode (development only)
NEXT_PUBLIC_DEBUG=false

# Enable verbose logging
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Show development tools
NEXT_PUBLIC_DEV_TOOLS=false

# ----------------------------------------------------------------------------
# External Services
# ----------------------------------------------------------------------------
# Mapbox for maps (alternative to Google Maps)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# Cloudinary for image hosting (optional)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
# CORS allowed origins (backend will validate)
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# ----------------------------------------------------------------------------
# Build Configuration
# ----------------------------------------------------------------------------
# Analyze bundle size
ANALYZE=false

# Skip TypeScript errors during build (not recommended)
# NEXT_PUBLIC_SKIP_TS_ERRORS=false

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
# 1. NEXT_PUBLIC_* variables are exposed to the browser
# 2. Variables without NEXT_PUBLIC_* are server-side only
# 3. Never expose secrets in NEXT_PUBLIC_* variables
# 4. Use .env.local for local development (gitignored)
# 5. Use Vercel dashboard for production environment variables
# 6. Rotate all keys/secrets regularly

# ============================================================================
# GENERATING SECURE KEYS
# ============================================================================
# Run these commands to generate secure keys:
#
# Random secret (32 bytes):
#   openssl rand -hex 32
#
# JWT secret (base64):
#   openssl rand -base64 64
#
# UUID:
#   uuidgen
