              "raw": "{\n  \"sites\": [\"npc\", \"propertypro\"],\n  \"max_pages\": 10\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/scrape/start",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "scrape", "start"]
